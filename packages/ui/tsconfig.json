{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["./src/*"]
    },
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "vitest.setup.ts"],
  "exclude": ["node_modules"]
}
